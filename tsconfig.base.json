{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngrx-crud-poc/core-data": ["libs/core-data/src/index.ts"],
      "@ngrx-crud-poc/ngrx-crud-util": ["libs/ngrx-crud-util/src/index.ts"],
      "@ngrx-crud-poc/ui": ["libs/ui/src/index.ts"],
      "@ngrx-crud-poc/books": ["libs/books/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
